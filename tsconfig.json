      "@airgap/cosmos": ["./node_modules/@airgap/cosmos/src"],
      "@airgap/cosmos/*": ["./node_modules/@airgap/cosmos/src/*"],
      "@airgap/coreum": ["./node_modules/@airgap/coreum/src"],
      "@airgap/coreum/*": ["./node_modules/@airgap/coreum/src/*"],
      "@airgap/crypto": ["./node_modules/@airgap/crypto/src"],
      "@airgap/crypto/*": ["./node_modules/@airgap/crypto/src/*"],
      "@airgap/ethereum": ["./node_modules/@airgap/ethereum/src"],
      "@airgap/ethereum/*": ["./node_modules/@airgap/ethereum/src/*"],
      "@airgap/groestlcoin": ["./node_modules/@airgap/groestlcoin/src"],
      "@airgap/groestlcoin/*": ["./node_modules/@airgap/groestlcoin/src/*"],
      "@airgap/icp": ["./node_modules/@airgap/icp/src"],
      "@airgap/icp/*": ["./node_modules/@airgap/icp/src/*"],
      "@airgap/mina": ["./node_modules/@airgap/mina/src"],
      "@airgap/mina/*": ["./node_modules/@airgap/mina/src/*"],
      "@airgap/module-kit": ["./node_modules/@airgap/module-kit/src"],
      "@airgap/module-kit/*": ["./node_modules/@airgap/module-kit/src/*"],
      "@airgap/moonbeam": ["./node_modules/@airgap/moonbeam/src"],
