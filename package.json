{
  "name": "airgap-coin-lib",
  "version": "0.0.0",
  "author": "Papers GmbH <contact@papers.ch> (https://papers.ch)",
  "license": "MIT",
  "homepage": "https://www.airgap.it",
  "repository": {
    "type": "git",
    "url": "https://github.com/airgap-it/airgap-coin-lib"
  },
  "private": true,
  "scripts": {
    "build": "lerna run build --stream --scope @airgap/coinlib-core && lerna run build --stream --scope @airgap/serializer && lerna run build --stream --scope @airgap/module-kit && lerna run build --stream --scope @airgap/bitcoin --scope @airgap/substrate && lerna run build --stream --ignore @airgap/coinlib-core --ignore @airgap/module-kit --ignore @airgap/bitcoin --ignore @airgap/substrate --ignore @airgap/serializer",
    "build-scripts": "tsc scripts/*.ts && lerna run build-scripts --stream",
    "lint": "lerna run lint --stream",
    "lint:prettier": "lerna run lint:prettier --stream",
    "lint-ci": "lerna run lint-ci --stream",
    "lint-ci:prettier": "lerna run lint-ci:prettier --stream",
    "test": "lerna run test --stream",
    "test-ci": "lerna run test-ci --stream",
    "test-legacy": "lerna run test-legacy --stream --scope @airgap/coinlib-core && lerna run test-legacy --stream --ignore @airgap/coinlib-core",
    "sonar-scanner": "sonar-scanner",
    "prepare": "husky install",
    "postinstall": "lerna bootstrap && lerna exec -- npm install --legacy-peer-deps",
    "install-test-dependencies": "node scripts/install-test-deps.js && npm install",
    "install-build-dependencies": "node scripts/install-build-deps.js && npm install",
    "generate-schemas": "./scripts/generate-schemas.sh",
    "browserify": "lerna run browserify --stream",
    "bump:version": "lerna version --no-git-tag-version",
    "bump:major": "lerna version --no-git-tag-version major --yes",
    "bump:minor": "lerna version --no-git-tag-version minor --yes",
    "bump:patch": "lerna version --no-git-tag-version patch --yes",
    "bump:beta": "lerna version --no-git-tag-version prerelease --preid beta --yes"
  },
  "dependencies": {
    "@airgap/aeternity": "file:packages/aeternity/dist",
    "@airgap/astar": "file:packages/astar/dist",
    "@airgap/bitcoin": "file:packages/bitcoin/dist",
    "@airgap/coinlib-core": "file:packages/core/dist",
    "@airgap/cosmos": "file:packages/cosmos/dist",
    "@airgap/ethereum": "file:packages/ethereum/dist",
    "@airgap/groestlcoin": "file:packages/groestlcoin/dist",
    "@airgap/module-kit": "file:packages/module-kit/dist",
    "@airgap/moonbeam": "file:packages/moonbeam/dist",
    "@airgap/polkadot": "file:packages/polkadot/dist",
    "@airgap/serializer": "file:packages/serializer/dist",
    "@airgap/substrate": "file:packages/substrate/dist",
    "@airgap/tezos": "file:packages/tezos/dist",
    "@airgap/wallet": "file:packages/wallet/dist"
  },
  "devDependencies": {
    "@types/node": "14.14.14",
    "browserify": "17.0.0",
    "husky": "5.1.3",
    "lerna": "3.22.1",
    "realpathify": "^1.0.1",
    "sonarqube-scanner": "2.8.0",
    "typescript": "4.8.4"
  },
  "buildDependencies": {
    "@types/node": "14.14.14",
    "browserify": "17.0.0",
    "husky": "5.1.3",
    "lerna": "3.22.1",
    "realpathify": "^1.0.1",
    "sonarqube-scanner": "2.8.0",
    "typescript": "4.8.4"
  },
  "testDependencies": {
    "@types/assert": "0.0.31",
    "@types/bip39": "2.4.0",
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/ethereumjs-util": "5.2.0",
    "@types/jasmine": "2.8.9",
    "@types/mocha": "5.2.5",
    "@types/pako": "1.0.1",
    "@types/semver": "6.0.2",
    "@types/underscore": "1.8.9",
    "ajv": "6.10.2",
    "axios": "0.20.0",
    "axios-mock-adapter": "^1.18.2",
    "browserify": "16.5.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "istanbul": "0.4.5",
    "mocha": "5.2.0",
    "node-fetch": "2.2.0",
    "nyc": "12.0.2",
    "prettier": "2.2.1",
    "pretty-quick": "2.0.1",
    "qrcode-terminal": "0.12.0",
    "semver": "6.3.0",
    "sinon": "6.3.5",
    "ts-json-schema-generator": "0.56.0",
    "ts-node": "8.5.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-valorsoft": "2.2.1"
  }
}
